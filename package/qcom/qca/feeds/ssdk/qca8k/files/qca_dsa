#!/bin/sh

cmd=$1
parastr=$2

load_qca8k() {
	local kernel_version=$(uname -r)

	[ -e "/lib/modules/$kernel_version/qca8k.ko" ] && {
		[ -d /sys/module/qca8k ] || insmod qca8k $parastr
	}

}

unload_qca8k() {
	[ -d /sys/module/qca8k ] && rmmod qca8k
}

turn_off_masterdev_cksm_offloading() {
	mdev=`ip link show  | grep lan1 | awk -F'[@:]' '{print $3}'`
	ethtool -K "$mdev" tx off
}

turn_on_masterdev_cksm_offloading() {
	mdev=`ip link show  | grep lan1 | awk -F'[@:]' '{print $3}'`
	ethtool -K "$mdev" tx on
}

if [[ $cmd = "start" ]]
then
	load_qca8k
	turn_off_masterdev_cksm_offloading
fi

if [[ $cmd = "stop" ]]
then
	turn_on_masterdev_cksm_offloading
	unload_qca8k
fi
